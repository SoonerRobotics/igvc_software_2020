<launch>

    <master auto="start"/>
    <!-- Run the map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find igvc_slam)/my_map.pgm my_map_resolution"/>

    <!--- Run AMCL -->
    <include file="$(find amcl)/examples/amcl_diff.launch" />

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find igvc_ros_navigation)/costmap/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find igvc_ros_navigation)/costmap/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find igvc_ros_navigation)/costmap/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find igvc_ros_navigation)/costmap/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find igvc_ros_navigation)/planner/base_local_planner_params.yaml" command="load" />
    </node>

    <!-- Run the simulator -->
    <include file="$(find igvc_ros_navigation)/launch/igvc_robot_config_sim.launch" />

</launch>